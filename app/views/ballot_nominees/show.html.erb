<%- model_class = BallotNominee -%>
<div class="page-header">
  <h1><%=t '.title', :default => BallotNominee %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:video_id) %></dt>
      <dd><pre class="prettyprint"><%= @ballot_nominee.video_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:category_key) %></dt>
      <dd><pre class="prettyprint"><%= @ballot_nominee.category_key %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:bn_type) %></dt>
      <dd><pre class="prettyprint"><%= @ballot_nominee.bn_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nominee) %></dt>
      <dd><pre class="prettyprint"><%= @ballot_nominee.nominee %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nominee_description) %></dt>
      <dd><pre class="prettyprint"><%= @ballot_nominee.nominee_description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ballot_nominees_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ballot_nominee_path(@ballot_nominee), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ballot_nominee_path(@ballot_nominee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

